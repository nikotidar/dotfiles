#!/usr/bin/env bash

# colors
text="#fff"
warning="#232e2f"
background="#e62b343b"

# other stuff
trs="%{F#00000000}"
bg="%{B$background}"
txt="%{F$text}"
wrn="%{F$warning}"

# accents
acc0="#b3bec1"
acc1="#f2f2f2"
acc2="#f52e363d"
acc3="#94a9d9"

# background accents
a0="%{B$acc0}"
a1="%{B$acc1}"
a2="%{B$acc2}"
a3="%{B$acc3}"

# foreground accents
af0="%{F$acc0}"
af1="%{F$acc1}"
af2="%{F$acc2}"

# misc
bgt="%{B$text}"
bgf="%{F$background}"
